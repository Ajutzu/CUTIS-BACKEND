{
  "_id": {
    "type": "ObjectId"
  },
  "name": {
    "type": "String"
  },
  "description": {
    "type": "String"
  },
  "severity": {
    "type": "String",
    "enum": ["Low", "Moderate", "High", "Severe"],
    "required": true
  },
  "recommendation": {
    "type": "String"
  },
  "created_at": {
    "type": "Date",
    "default": "Date.now"
  },
  "updated_at": {
    "type": "Date",
    "default": "Date.now"
  }
}
